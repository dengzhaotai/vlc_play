<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="TabImgBtnStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="com.dzt.musicplay:textColor">#ff000000</item>
        <item name="com.dzt.musicplay:textSize">20sp</item>
        <item name="android:background">#00000000</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="ListBigStyle">
        <item name="android:textColor">#ff000000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="ListSmallStyle">
        <item name="android:textColor">#ffaaaaaa</item>
        <item name="android:textSize">13sp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="BottomPlayBigStyle">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="BottomPlaySmallStyle">
        <item name="android:textColor">#ffed14a3</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

</resources>